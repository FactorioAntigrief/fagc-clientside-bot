// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BotConfig {
  id                        Int       @id @default(autoincrement())
  apikey                    String?
  owner                     String
  lastNotificationProcessed DateTime  @default(now()) @updatedAt
  actions                   Actions[]
}

model InfoChannel {
  id        Int    @id @default(autoincrement())
  channelID String @unique
  guildID   String
}

model Command {
  id      String @id
  guildID String
  name    String
}

model Actions {
  id          Int       @id @default(autoincrement())
  guildID     String    @unique
  report      String    @default("none")
  revocation  String    @default("none")
  config      BotConfig @relation(fields: [botConfigId], references: [id])
  botConfigId Int
}

model Privatebans {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}

model Whitelist {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}
