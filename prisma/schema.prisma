generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BotConfig {
  guildID                   String    @id
  apikey                    String?
  owner                     String
  lastNotificationProcessed DateTime  @default(now()) @updatedAt
  actions                   Actions[]
}

model InfoChannel {
  id        Int    @id @default(autoincrement())
  channelID String @unique
  guildID   String
}

model Command {
  id      String @id
  guildID String
  name    String
}

model Actions {
  id          Int       @id @default(autoincrement())
  guildID     String    @unique
  report      String    @default("none")
  revocation  String    @default("none")
  botConfigID String
  config      BotConfig @relation(fields: [botConfigID], references: [guildID])
}

model Privatebans {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}

model Whitelist {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}
